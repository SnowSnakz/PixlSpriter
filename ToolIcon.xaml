<UserControl x:Class="PixlSpriter.ToolIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixlSpriter"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="48" Focusable="False">
    <Grid Width="48" Height="48" RenderOptions.BitmapScalingMode="NearestNeighbor" Focusable="False">
        <Button x:Name="IconBtn" Click="IconBtn_Click" Background="Transparent" BorderThickness="0" Focusable="False">
            <Image x:Name="IconImg" Stretch="Fill" Focusable="False"/>
        </Button>
    </Grid>
</UserControl>
